@model GroupMessage

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="" class="form-horizontal">
            <section class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <label asp-for="User" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input disabled asp-for="User.FullName" class="form-control" />
                            <span asp-validation-for="User" class="text-danger"></span>
                        </div>
                        <label asp-for="Group" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input disabled asp-for="Group.Name" class="form-control" />
                            <span asp-validation-for="Group" class="text-danger"></span>
                        </div>
                    </div> 
                    <div class="form-group row">
                        <label asp-for="Attachment.AttachmentURL" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <img class="img-thumbnail" src="@Model.Attachment.AttachmentURL" width="75">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Message" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <textarea disabled asp-for="Message" class="form-control"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LastModifiedAt" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="LastModifiedAt" asp-format="{0:dd-MM-yyyy h:mm tt}" class="form-control" disabled>
                        </div>
                        <label asp-for="LastModifiedBy" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="LastModifiedBy" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CreatedAt" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="CreatedAt" asp-format="{0:dd-MM-yyyy h:mm tt}" class="form-control" disabled>
                        </div>
                        <label asp-for="CreatedBy" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="CreatedBy" class="form-control" disabled>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>
