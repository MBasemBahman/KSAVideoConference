@model GroupMessage

<td>
    @Html.DisplayFor(modelItem => Model.Id)
</td>
<td>
    <a asp-action="Index" asp-controller="User" asp-all-route-data="@(new Dictionary<string, string> { { "Id", Model.Fk_User.ToString() } })" target="_blank">
        @Html.DisplayFor(modelItem => Model.User.FullName)
    </a>
</td>
<td>
    <a asp-action="Index" asp-controller="Group" asp-all-route-data="@(new Dictionary<string, string> { { "Id", Model.Fk_Group.ToString() } })" target="_blank">
        @Html.DisplayFor(modelItem => Model.Group.Name)
    </a>
</td>
<td>
    @if (@Model.Attachment != null)
    {
        <a class="image-popup-no-margins" href="@Model.Attachment.AttachmentURL">
            <img class="img-thumbnail img-fluid" src="@Model.Attachment.AttachmentURL" width="75">
        </a>
    }
</td>

